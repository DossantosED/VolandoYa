@{
    ViewData["Title"] = "Inicio";
}

@model IEnumerable<VolandoYa.Models.Vuelo>

@if (@Model.Count() > 0)
{
<div class="container-fluid d-inline-flex">

    @foreach (var item in Model)
    {

        <div class="card mx-auto" style="width: 25rem;">
            <img src="https://s3-us-west-2.amazonaws.com/denomades/blog/wp-content/uploads/2020/05/08213126/shutterstock_1371228326-696x320.jpg" class="card-img-top">

            <div class="card-body">
                <h5 class="card-title">Vuela a @Html.DisplayFor(modelItem => item.Destino)!</h5>
                <form action="checkout?ID=@Html.DisplayFor(modelItem => item.id)">
                    <div class="form-group">
                        <span><i class="fas fa-plane"></i> @Html.DisplayNameFor(model => model.Aerolinea):</span>
                        <span>@Html.DisplayFor(modelItem => item.Aerolinea)</span>
                    </div>

                    <div class="form-group">
                        <span><i class="fas fa-plane-departure"></i> @Html.DisplayNameFor(model => model.Fecha_salida):</span>
                        <span>@Html.DisplayFor(modelItem => item.Fecha_salida)</span>
                    </div>

                    <div class="form-group">
                        <span><i class="fas fa-plane-arrival"></i> @Html.DisplayNameFor(model => model.Fecha_Vuelta):</span>
                        <span>@Html.DisplayFor(modelItem => item.Fecha_Vuelta)</span>
                    </div>

                    <div class="form-group">
                        <span><i class="fas fa-wheelchair"></i> @Html.DisplayNameFor(model => model.Lugares_Disponibles):</span>
                        <span>@Html.DisplayFor(modelItem => item.Lugares_Disponibles)</span>
                    </div>

                    <div class="form-group">
                        <span><i class="fas fa-dollar-sign"></i> @Html.DisplayNameFor(model => model.Precio):</span>
                        <span>$ @Html.DisplayFor(modelItem => item.Precio)</span>
                    </div>
                    <button id="btnEnviar" class="btn btn-primary"><i class="fas fa-shopping-cart"></i> Comprar</button>
                </form>
            </div>
        </div>
    }
</div>
}else{
    <div class="card mx-auto" style="width: 18rem;">
        <div class="card-body">
            <p>No hay Vuelos cargados!</p>
        </div>
    </div>
}
